/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

// use global-quick-tap-ms for combos (requires PR 1387)
#undef COMBO_HOOK
#define COMBO_HOOK global-quick-tap-ms = <75>;

#define COMBO_TERM_FAST 20
#define COMBO_TERM_SLOW 35

// make homerow combos tap-only (so mods can be chorded correctly)
#define HRC_ESC     &hml HRL_4(HRL3) ESC
#define HRC_GRAVE   &hml HRL_3(HRL2) GRAVE
#define HRC_LPAR    &hmr HRR_1(HRR2) LPAR
#define HRC_RPAR    &hmr HRR_2(HRR3) RPAR
#define HRC_RETURN  &hml HRR_3(HRR4) RETURN

/* Horizontal combos left hand */
ZMK_COMBO(tab,   &kp TAB,      LT3 LT2,     DEF NAV NUM, COMBO_TERM_FAST)
ZMK_COMBO(mouse, &smart_mouse, LT3 LT1,     DEF NAV NUM, COMBO_TERM_FAST)

ZMK_COMBO(esc,   HRC_ESC,      LM4 LM3,     DEF NAV NUM, COMBO_TERM_FAST)
ZMK_COMBO(grave, HRC_GRAVE,    LM3 LM2,     DEF NAV NUM, COMBO_TERM_FAST)

ZMK_COMBO(cut,   &kp LG(X),    LB3 LB1,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(copy,  &kp LG(C),    LB3 LB2,     DEF NAV NUM, COMBO_TERM_FAST)
ZMK_COMBO(paste, &kp LG(V),    LB2 LB1,     DEF NAV NUM, COMBO_TERM_FAST)

/* Vertical combos left hand */
ZMK_COMBO(excl,  &kp EXCL,     LT4 LM4,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(at,    &kp AT,       LT3 LM3,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(hash,  &kp HASH,     LT2 LM2,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(dllr,  &kp DLLR,     LT1 LM1,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(prcnt, &kp PRCNT,    LT0 LM0,     DEF NAV NUM, COMBO_TERM_SLOW)

/* Horizontal combos right hand */
ZMK_COMBO(bspc,  &kp BSPC,      RT1 RT2,     DEF NAV NUM, COMBO_TERM_FAST)
ZMK_COMBO(del,   &kp DEL,       RT2 RT3,     DEF NAV NUM, COMBO_TERM_FAST)
ZMK_COMBO(unic,  &sl UC,        RT1 RT3,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(cpgrk, &sls 0,        RT1 RT2 RT3, DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(lpar,  HRC_LPAR,      RM1 RM2,     DEF NAV NUM, COMBO_TERM_FAST)
ZMK_COMBO(rpar,  HRC_RPAR,      RM2 RM3,     DEF NAV NUM, COMBO_TERM_FAST)
ZMK_COMBO(ret,   HRC_RETURN,    RM3 RM4,     DEF NAV NUM, COMBO_TERM_FAST)

ZMK_COMBO(lbrk,  &kp LBKT,      RB1 RB2,     DEF NAV NUM, COMBO_TERM_FAST)
ZMK_COMBO(rbrk,  &kp RBKT,      RB2 RB3,     DEF NAV NUM, COMBO_TERM_FAST)

/* Vertical combos right hand */
ZMK_COMBO(caret, &kp CARET,     RT0 RM0,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(amps,  &kp AMPS,      RT1 RM1,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(star,  &kp STAR,      RT2 RM2,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(minus, &kp MINUS,     RT3 RM3,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(bslh,  &kp BSLH,      RM3 RB3,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(equal, &kp EQUAL,     RT4 RM4,     DEF NAV NUM, COMBO_TERM_SLOW)
